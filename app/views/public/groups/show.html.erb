<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-6 border border-light mt-5">
      <h5 class="text-center p-4 mb-0"><%= @group.name %></h5>
      <div class="row d-flex justify-content-center">
        <% if @group.participation_in?(current_user) %>
          <%= link_to "メンバーから退出", group_participation_path(@group), method: :delete, class: "btn btn-secondary" %>
        <% else %>
          <%= link_to "メンバーに参加する", group_participation_path(@group), method: :post, class: "btn btn-danger" %>
        <% end %>
      </div>
      <h5 class="text-center p-4 mb-0">メンバー一覧</h5>
        
      <div class="row d-flex justify-content-center mt-1">
        <div class="col-10">
          <table class="table table-borderless matsuri-style">
            <thead>
              <tr>
                <th class="col-3"></th>
                <th class="col-5"></th>
              </tr>
            </thead>
            <tbody>
              <% @members.each do |user| %>
              <tr>
                <td>
                  <%= image_tag user.get_profile_image(60,60), class: "rounded-lg" %>
                </td>
                <td><%= user.name %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
